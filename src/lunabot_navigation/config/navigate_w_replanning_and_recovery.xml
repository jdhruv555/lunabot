<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="NavigateWithReplanningAndRecovery">
      <PipelineSequence name="Navigate">
        <ReactiveFallback name="GoalUpdated">
          <GoalUpdated/>
          <ComputePathToPose goal="" path="path" planner_id="GridBased"/>
        </ReactiveFallback>
        <TruncatePath distance="0.0" input_path="path" output_path="truncated_path"/>
        <FollowPath path="truncated_path" controller_id="FollowPath"/>
      </PipelineSequence>
      <RecoveryNode number_of_retries="5" name="Recover">
        <SequenceStar name="ClearingActions">
          <ClearCostmapRecovery service_name="/local_costmap/clear_entirely_local_costmap"/>
          <BackUp distance="0.15"/>
          <Wait delay="1.0"/>
          <Spin spin_dist="1.57"/>
        </SequenceStar>
      </RecoveryNode>
    </Sequence>
  </BehaviorTree>
</root>
